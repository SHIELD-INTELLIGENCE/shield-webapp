<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
<style name="SHIELDTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Core branding -->
    <item name="colorPrimary">@color/colorPrimary</item>             <!-- Black -->
    <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
    <item name="colorSecondary">@color/colorSecondary</item>

    <!-- System bars -->
    <item name="android:statusBarColor">@color/shield_gold</item>
    <item name="android:navigationBarColor">@color/colorPrimary</item>
    <item name="android:windowLightStatusBar">true</item>
</style>


    <!-- NoActionBar variant -->
    <style name="SHIELDTheme.NoActionBar" parent="SHIELDTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
 
 <style name="SHIELDSplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="android:windowBackground">@drawable/splash</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
</style>

</resources>